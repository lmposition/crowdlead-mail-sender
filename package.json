{
  "name": "email-manager",
  "version": "1.0.0",
  "description": "API de gestion d'emails avec interface d'administration",
  "main": "dist/server.js",
  "scripts": {
    "setup": "node setup.js",
    "debug": "node debug.js",
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "postinstall": "npm run setup && npm run build",
    "test": "npm run type-check",
    "railway:start": "bash railway-start.sh",
    "railway:build": "npm run build"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "resend": "^3.0.0",
    "express-session": "^1.17.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "pg": "^8.11.0",
    "sqlite3": "^5.1.6",
    "bcrypt": "^5.1.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/cors": "^2.8.13",
    "@types/pg": "^8.10.0",
    "@types/sqlite3": "^3.1.8",
    "@types/bcrypt": "^5.0.0",
    "@types/uuid": "^9.0.0",
    "typescript": "^5.0.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.0"
  },
  "keywords": ["email", "api", "typescript", "nodejs"],
  "author": "Your Name",
  "license": "MIT"
}